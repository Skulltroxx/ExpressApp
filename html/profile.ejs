<style>
  body {
    font-family: "Poppins", sans-serif;

  }

  html {
    scroll-behavior: smooth;

  }

  .hidden {
    visibility: hidden;
  }

  .back-top-wrap {
    position: fixed;
    bottom: 5rem;
    right: 1rem;
    background-color: #80F7D1;
    padding: 1rem 1.2rem;
    border-radius: 50%;
    cursor: pointer;
    transition: .3s ease-in-out;
    z-index: 100;
  }

  .back-top-wrap:hover {
    background-color: #00a2ff;
    color: #80F7D1;
  }

  .back-top-wrap:hover .fas.fa-arrow-up {
    color: white;
  }

  .fas.fa-arrow-up {
    color: #00488F;
    transition: 0.3s ease-in-out;
  }

  header {
    height: 1em !important;
    background-color: #03294e;
    background-image: none;
  }

  nav {
    background-color: rgb(25, 1, 54);

  }

  .main {
    background-color: #052e57;
    text-align: center;
    min-height: 90vh;
    color: whitesmoke;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-image: linear-gradient(rgba(4, 9, 30, 0.7), rgba(4, 9, 30, 0.7)), url('../images/landing-page-image.jpg');
    background-size: cover;
  }

  .about h2{
    display: inline-block;
  }

  .about img{
    height: 200px;
    width: auto;
  }
</style>

<body onload="myFunction()">
  <div class="loading-wrapper">
    <img src="/images/s_logo.png" id="loading" />
  </div>

  <header style="min-height: 99px;">
    <nav class="nav" id="nav">
      <div>
        <a class="navbar-brand" href="#!"> <img src="/images/s_logo.png" alt="Logo" class="logo" /></a>
      </div>
      <div class="nav-links" id="navLinks">
        <ul class="links" id="navmenu">
          <li><a href="/">HOME</a></li>
          <li><a href="/audio">AUDIO</a></li>
          <li><a href="/yoga">YOGA</a></li>
          <li><a href="/laugh">LAUGH</a></li>
          <li><a href="/talking">TALK</a></li>
          <li><a href="/spirituality">SPIRITUAL</a></li>
          <li><a href="/logout">LOGOUT</a></li>
        </ul>
      </div>

      </div>

  </header>
  <div class="main">
    <h1 center style="color:crimson;"><u>User details</u></h1>
    <br>
    <div class="about">
      <img src="../images/profilepic.png" alt="ProfilePic"><br>
      <h2>Name:</h2><span id="username">
        <%= user.username %>
      </span><br>
      <h2>Email:</h2><span id="email">
        <%= user.email %>
      </span>
    </div>
    <br><br><br>
    <h1 center style="color: crimson; text-decoration: underline; padding-bottom: 5px;">Favourites</h1>
    
      <section id="videos">
        <h2 class="section-headings">Videos</h2>
          <div class="collection">
            <% user.fav_videos.forEach((video) => { %>
              <div class="video">
                <iframe
                  width="100%"
                  height="330"
                  src="<%= video %>"
                  title="Video Title"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen>
                </iframe>
                <form action="/profile" method="post">
                  <input type="text" name="video_url" id="video_url" class="hidden" value="<%= video %>">
                  <button type="submit" class="rounded-btn"><div>&#10006</div></button>
                </form> 
              </div>
            <% }) %>
          </div>
      </section>
      <section id="playlist">
        <h2 class="section-headings">Music Playlists</h2>
        <div class="container">
          <% user.fav_music_playlist.forEach((playlist) => { %>
          <div class="playlist" >
            <iframe
              style="border-radius: 12px"
              src="<%= playlist %>"
              width="100%"
              height="380"
              frameborder="0"
              allowfullscreen=""
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            ></iframe>
            <form action="/profile" method="post">
              <input type="text" name="playlist_url" id="playlist_url" class="hidden" value="<%= playlist %>">
              <button type="submit" class="rounded-btn"><div>&#10006</div></button>
            </form> 
          </div>
          <% }); %>
        </div>
      </section>
      </div>
      <br><br>
      
      <section id="podcasts">
        <h2 class="sections-headings">Podcasts</h2>
        <div class="container">
          <% user.fav_podcasts.forEach((podcast) => { %>
            <div class="show">
              <iframe
              src="<%= podcast %>"
              width="100%"
              height="105"
              frameborder="0"
              allowfullscreen=""
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              ></iframe>
              <form action="/profile" method="post">
                <input type="text" name="podcast_url" id="podcast_url" class="hidden" value="<%= podcast %>">
                <button type="submit" class="rounded-btn"><div>&#10006</div></button>
              </form>            
            </div>
          <% }); %>
        </div>
      </section>




